        @Html.LabelFor(model => model.ExhibitionDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10"></div>
        @Html.EditorFor(model => model.ExhibitionDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ExhibitionDate, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ExhibitionName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10"></div>
        @Html.EditorFor(model => model.ExhibitionName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ExhibitionName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ExhibitionDescription, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10"></div>
        @Html.EditorFor(model => model.ExhibitionDescription, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ExhibitionDescription, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ExhibitionLocation, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10"></div>
        @Html.EditorFor(model => model.ExhibitionLocation, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ExhibitionLocation, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Exhibition" class="btn btn-default" />
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Exhibitions", "ExhibitionIndex")
</div>
}